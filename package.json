{
  "name": "fullstack-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --filter client --filter api dev",
    "dev:client": "pnpm --filter client dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm run --recursive build",
    "build:client": "pnpm --filter client build",
    "build:api": "pnpm --filter api build",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "pnpm run --recursive test",
    "test:api": "pnpm --filter api test",
    "db:generate": "pnpm --filter api drizzle-kit generate",
    "db:migrate": "pnpm --filter api drizzle-kit migrate",
    "db:push": "pnpm --filter api drizzle-kit push",
    "db:studio": "pnpm --filter api drizzle-kit studio",
    "clean": "pnpm run --recursive --parallel clean && rm -rf node_modules",
    "clean:deps": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.50.0"
  }
}
